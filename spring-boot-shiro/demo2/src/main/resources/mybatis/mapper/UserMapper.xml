<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.glacier.shiro.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.glacier.shiro.entity.User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="nickname" property="nickname"/>
        <result column="password" property="password"/>
    </resultMap>

    <sql id="base_columns">
        a.id,a.username,a.password, a.nickname
    </sql>

    <sql id="join_columns">
    </sql>

    <sql id="joins">
    </sql>

    <select id="findByUsername" resultMap="BaseResultMap">
        select
        <include refid="base_columns"/>
        from users a
        <where>
            a.username=#{username}
        </where>
    </select>

    <select id="findAll" resultMap="BaseResultMap">
        select
        <include refid="base_columns"/>
        from users a
    </select>

    <delete id="deleteById" parameterType="java.lang.String">
        delete
        from users
        where id = #{id}
    </delete>

    <insert id="insert">
        insert into users (id, username, password, nickname)
        values (#{id}, #{username}, #{password}, #{nickname})
    </insert>

</mapper>
